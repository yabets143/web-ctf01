<%- include('partials/header', { title: 'Login • Parameter Pollution CTF' }) %>

<div class="row justify-content-center">
  <div class="col-12 col-md-6 col-lg-5">
    <div class="card">
      <div class="card-header"><strong>Login</strong></div>
      <div class="card-body">
        <% if (typeof error !== 'undefined') { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <form method="post" action="/auth/login" class="d-grid gap-3">
          <div>
            <label class="form-label">Username</label>
            <input class="form-control" name="username" required />
          </div>
          <div>
            <label class="form-label">Password</label>
            <input class="form-control" name="password" type="password" required />
          </div>
          <button class="btn btn-primary" type="submit">Login</button>
        </form>
        <div class="mt-3">
          <a href="/">Home</a> • <a href="/auth/register">Register</a>
        </div>
      </div>
    </div>
  </div>
  
</div>

<%- include('partials/footer') %>
