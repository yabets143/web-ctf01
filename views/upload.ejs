<%- include('partials/header', { title: 'Upload â€¢ Parameter Pollution CTF' }) %>

<div class="row justify-content-center">
  <div class="col-12 col-lg-6">
    <div class="card">
      <div class="card-header"><strong>Upload a File</strong></div>
      <div class="card-body">
        <% if (typeof error !== 'undefined') { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <% if (typeof success !== 'undefined') { %>
          <div class="alert alert-success"><%= success %></div>
        <% } %>
        <form method="post" action="/upload" enctype="multipart/form-data" class="d-grid gap-3">
          <input class="form-control" type="file" name="file" />
          <button class="btn btn-primary" type="submit">Upload</button>
        </form>
        <% if (typeof filePath !== 'undefined') { %>
          <div class="mt-3">View file: <a href="<%= filePath %>" target="_blank" rel="noopener"><%= filePath %></a></div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
